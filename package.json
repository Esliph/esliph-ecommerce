{
    "name": "esliph-me",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "start:production": "node dist/index.js --env=production",
        "start:nest": "nest start --env-production",
        "start:dev": "tsx watch -r tsconfig-paths/register src/index.ts",
        "start:test": "tsx watch -r tsconfig-paths/register src/index.ts --env=test",
        "start:debug": "tsx watch -r tsconfig-paths/register src/index.ts --debug --inspect",
        "start:nest:dev": "nest start --watch",
        "start:nest:debug": "nest start --watch --debug",
        "start:nest:test": "nest start --watch --env=test",
        "build:nest": "nest build",
        "setup:production": "npm i && npm run prisma:generate npm run build:nest && npm run start:production",
        "setup:dev": "npm i && npm run prisma:migrate && npm run prisma:generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "prisma:generate": "prisma generate",
        "prisma:validate": "prisma format",
        "prisma:pull": "prisma introspect",
        "test:vitest": "vitest",
        "test:jest": "jest",
        "test:jest:watch": "jest --watch",
        "test:jest:cov": "jest --coverage",
        "test:jest:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:jest:e2e": "jest --config ./test/jest-e2e.json",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@esliph/util": "^1.0.18",
        "@fastify/cors": "^8.2.1",
        "@fastify/jwt": "^6.7.1",
        "@fastify/multipart": "^7.6.0",
        "@fastify/static": "^6.10.1",
        "@nestjs/axios": "^2.0.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.2",
        "@nestjs/core": "^9.0.0",
        "@nestjs/microservices": "^9.4.2",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/platform-fastify": "^9.4.2",
        "@nestjs/schedule": "^2.2.3",
        "@prisma/client": "^4.14.0",
        "axios": "^1.4.0",
        "class-transformer": "^0.5.1",
        "class-transformer-validator": "^0.9.1",
        "class-validator": "^0.14.0",
        "fastify": "^4.17.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@swc/core": "^1.3.62",
        "@types/axios": "^0.14.0",
        "@types/cron": "^2.0.1",
        "@types/express": "^4.17.13",
        "@types/jest": "29.5.1",
        "@types/node": "18.16.12",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.3",
        "jest": "29.5.0",
        "prettier": "^2.3.2",
        "prisma": "^4.15.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.1.0",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.2.0",
        "tslib": "^2.5.3",
        "tsx": "^3.12.7",
        "typescript": "^5.0.0",
        "vitest": "^0.31.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "$(.*)$": "<rootDir>/../$1",
            "@/(.*)$": "<rootDir>/../src/$1",
            "@(.*)$": "<rootDir>/../src/app/$1"
        }
    }
}
